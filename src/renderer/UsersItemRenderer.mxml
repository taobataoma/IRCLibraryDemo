<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				xmlns:s="library://ns.adobe.com/flex/spark"
				width.hovered="100%" height.hovered="48"
				width.normal="100%" height.normal="28"
				width.selected="100%" height.selected="48">
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected"/>
	</s:states>     
	
	<mx:Label text="{data.name}"
			  left.hovered="60" top.hovered="4"
			  left.normal="35" top.normal="4"
			  left.selected="60" top.selected="4"/>
	<mx:Label visible.normal="false" visible.hovered="true" visible.selected="true"
			  text.hovered="ID: {data.nick}"  text.selected="ID: {data.nick}"
			  left.hovered="60" bottom.hovered="1"
			  left.selected="60" bottom.selected="1"/>
	<s:Image left="5" top="5" width="48"
			 source="http://www.jf258.com/uploads/2014-09-03/124600132.jpg"
			 left.hovered="5" top.hovered="2" width.hovered="44" height.hovered="44"
			 source.hovered="http://www.jf258.com/uploads/2014-09-03/124600882.jpg"
			 left.normal="5" top.normal="3" width.normal="22" height.normal="22"
			 left.selected="5" top.selected="2" width.selected="44" height.selected="44"
			 source.selected="http://www.jf258.com/uploads/2014-09-03/124600882.jpg"/>
</s:ItemRenderer>